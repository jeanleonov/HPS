package core.Main;		// LAO: added

import java.io.*;
import java.util.*;

public class InitInformSaver {
	public InitInformSaver(String file, int expirementNum, int years, Vector<Vector<Object>> DistributionUnits) throws IOException
	{
		BufferedWriter out = new BufferedWriter(new FileWriter(file + ".hpsi"));
		out.write(years + "\n");
		out.write(expirementNum + "\n");
		out.write(DistributionUnits.size() + "\n");
		for(int i = 0; i < DistributionUnits.size(); i++)
		{
			out.write("\n");
			out.write((Integer)(DistributionUnits.get(i).get(0)) + "\n");
			out.write((Integer)DistributionUnits.get(i).get(1) + "\n3\n2");
			out.write((Float)DistributionUnits.get(i).get(2) + "\n");
			out.write((Integer)DistributionUnits.get(i).get(2) + "\n");
		}
	}
}
